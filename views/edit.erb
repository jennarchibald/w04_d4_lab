<form action="/students/<%= @student.id%>/" method="post">
  <label for="first-name"></label>
  <input type="text" name="first_name" id="first-name" value = "<%=@student.first_name%>">
  <label for="last-name"></label>
  <input type="text" name="last_name" id="last-name" value = "<%=@student.last_name%>">
  <label for="age"></label>
  <input type="number" name="age" id="age" value = "<%=@student.age%>">
  <select name="house_id">
    <% for house in @houses %>
    <option value="<%= house.id %>" <%= "Selected" if house.id == @student.house_id %>><%= house.name %></option>
    <% end %>
  </select>
  <input type="submit" name="Add Student" value="Submit Changes">
</form>
