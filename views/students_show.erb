<table>
  <tr>
    <th>First Name</th>
    <td><%= @student.first_name %></td>
  </tr>
  <tr>
    <th>Last Name</th>
    <td><%= @student.last_name %></td>
  </tr>
  <tr>
    <th>House</th>
    <td><%= @student.house.name %></td>
  </tr>
  <tr>
    <th>Age</th>
    <td><%= @student.age %></td>
  </tr>
  <tr>
    <td><form action = "/students/<%=@student.id%>/edit/" method="get">
      <input type="submit" name="edit" value="Edit Details">
    </form></td>
    <td><form action="/students/<%= @student.id %>/delete/" method="post">
      <input type="submit" name="delete" value="EXPEL">
    </form></td>
  </tr>
</table>

<img src = <%=@student.house.logo%> alt="<%=@student.house.name%> logo">
